@model GetCargoCustomerWithUserIdDto
@{
    ViewData["Title"] = "User";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";

}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Kargo Müşterisi Detay Bilgileri</h4>
        <div class="bs-example" data-example-id="bordered-table">

            @if (Model is { Address: not null, City: not null })
            {

                <table class="table table-bordered">
                    <tr>
                        <th>Eposta:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Adres:</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Şehir</th>
                        <td>@Model.City</td>
                    </tr>
                    <tr>
                        <th>İlçe:</th>
                        <td>@Model.District</td>
                    </tr>
                    <tr>
                        <th>Telefon:</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                </table>
            }
            else
            {


                <div class="alert alert-warning">

                    Müşteri Bilgileri yok
                </div>

            }

        </div>
    </div>
</div>
