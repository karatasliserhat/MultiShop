@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";

    int count = 0;
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Yorum Tablosu</h4>
        <p>Yorumlar ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilsiniz.</p>
        <div class="bs-example" data-example-id="bordered-table">

            @*<div class="text-start">
                    <a asp-action="CreateComment" asp-controller="Comment" class="btn btn-primary">Yeni Yorum</a>
                </div>*@
            <br />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ürün</th>
                        <th>Kullanıcı Görseli</th>
                        <th>Kullanıcı</th>
                        <th>E-Posta</th>
                        <th>Yorum</th>
                        <th>Puan</th>
                        <th>Tarihi</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model is not null)
                    {

                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.ProductName</td>
                                <td><img src="@item.ImageUrl" style="width:50px; height:50px" alt="Alternate Text" /></td>
                                <td>@item.NameSurname</td>
                                <td>@item.Email</td>
                                <td>@item.CommentDetail</td>
                                <td>@item.Rating</td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>@(item.Status?"Aktif":"Pasif")</td>
                                <td><a asp-action="Delete" asp-controller="Comment" asp-route-id="@item.DataProtect" class="btn btn-danger">Sil</a></td>
                                <td><a asp-action="Update" asp-controller="Comment" asp-route-id="@item.DataProtect" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    }
                    else
                    {


                        <tr>
                            <td class="alert alert-warning" colspan="4">Kayıt Yok</td>
                        </tr>

                    }
                </tbody>



            </table>
        </div>
    </div>
</div>
