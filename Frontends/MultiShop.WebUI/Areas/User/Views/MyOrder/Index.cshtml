@model List<GetOrderingByUserIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
    const string table = "table";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Geçmiş Siparişlerim</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Toplam Fiyat</th>
                                    <th>Sipariş Tarihi</th>
                                    <th>Sipariş Detay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model is not null)
                                {
                                    @foreach (var item in Model)
                                    {

                                        count++;
                                        <tr class="@table-@item.TableRowColor">
                                            <td>@count</td>
                                            <td>@item.TotalPrice ₺</td>
                                            <td>@item.OrderDate.ToString("dd.MMM.yyyy")</td>
                                            <td><a asp-action="Index" asp-controller="OrderDetail" asp-route-orderId="@item.DataProtect" class="btn btn-outline-info">Sipariş Detayına Git</a></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr class="table-warning">
                                        <td colspan="4">Geçmiş Siparişiniz Bulunmamaktadır</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

