@model CreateCommentDto
<div class="col-md-6">
    <h4 class="mb-4">Bir Yorum Bırakın</h4>
    <small>Yorumunuzun alınması için geçerli bir email adresi giriniz *</small>
    <div class="d-flex my-3">
        @*<p class="mb-0 mr-2">Ürün Puanınız * :</p>
        <div class="text-primary">
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
        </div>*@
    </div>
    <form asp-controller="ProductList" asp-action="AddComment" method="post">
        <input type="hidden" asp-for="@Model.ProductId" />
        <div class="form-group">
            <label for="name">Ürün Puanınız *</label>
            <input type="number" max="5" min="0" class="form-control" asp-for="@Model.Rating">
        </div>
        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="text" class="form-control" asp-for="@Model.NameSurname">
        </div>
        <div class="form-group">
            <label for="email">Email Adresiniz *</label>
            <input type="email" class="form-control" asp-for="@Model.Email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz *</label>
            <textarea asp-for="@Model.CommentDetail" cols="30" rows="5" class="form-control"></textarea>
        </div>
        <div class="form-group mb-0">
            <input type="submit" value="Yorum Yap" class="btn btn-primary px-3">
        </div>
    </form>
</div>