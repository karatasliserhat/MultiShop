
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ImageSliderProductDetailComponentPartial", new { id = ViewBag.dataId })
        @await Component.InvokeAsync("_FeatureProductDetailComponentPartial", new { id = ViewBag.dataId })
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Açıklaması</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün Bilgileri</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar (1)</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_DescriptionProductDetailComponentPartial", new { id = ViewBag.dataId })

                    @await Component.InvokeAsync("_InformationProductDetailComponenetPartial", new { id = ViewBag.dataId })

                    @await Component.InvokeAsync("_ReviewProductDetailComponenetPartial")
                </div>
            </div>
        </div>
    </div>
</div>
