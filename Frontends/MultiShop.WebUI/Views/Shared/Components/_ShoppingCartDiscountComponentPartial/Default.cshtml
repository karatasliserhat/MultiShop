@{ BasketDiscountCalculateDto basketDiscount = ViewBag.BasketDiscountCalculate as BasketDiscountCalculateDto;}
<div class="col-lg-4">
    @await Component.InvokeAsync("_ShoppingCartDiscountCouponCodeComponentPartial")
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-1">
                <h6>Toplam Ürün Fiyatı</h6>
                <h6>₺ @basketDiscount.TotalPrice</h6>
            </div>
            <div class="d-flex justify-content-between" mb-1>
                <h6 class="font-weight-medium">Kdv Tutarı</h6>
                <h6 class="font-weight-medium">₺ @basketDiscount.TaxAmount</h6>
            </div>
            <div class="d-flex justify-content-between" mb-1>
                <h6 class="font-weight-medium">İndirim Oranı</h6>
                <h6 class="font-weight-medium">% @basketDiscount.DiscountRate</h6>
            </div>
            <div class="d-flex justify-content-between" mb-1>
                <h6 class="font-weight-medium">İndirimsiz Tutar</h6>
                <h6 class="font-weight-medium">₺ @basketDiscount.AmountIncludingTax</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>İndirimli Güncel Tutar</h5>
                <h5>₺ @basketDiscount.DiscountedAmaunt</h5>
            </div>
            <a asp-action="Index" asp-controller="Order" asp-route-rate="@basketDiscount.DiscountRate" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</a>
        </div>
    </div>
</div>