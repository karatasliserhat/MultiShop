@model BasketTotalDto
<div class="col-lg-8 table-responsive mb-5">
    <table class="table table-light table-borderless table-hover text-center mb-0">
        <thead class="thead-dark">
            <tr>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th>Miktar</th>
                <th>Toplam</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @if (Model.BasketItems.Count > 0)
            {
                foreach (var item in Model.BasketItems)
                {
                    <tr>
                        <td class="align-middle"><img src="@item.ProductImageUrl" alt="" style="width: 50px; height:60px;"> @item.ProductName</td>
                        <td class="align-middle">@item.Price ₺</td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-minus">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="@item.Quantity">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-plus">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">@(item.Price*item.Quantity) ₺</td>
                        <td class="align-middle"><a class="btn btn-sm btn-danger" asp-controller="ShoppingCart" asp-action="RemoveBasketItem" asp-route-productId="@item.DataProtect"><i class="fa fa-times"></i></a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="alert alert danger">
                        Sepetinizde Ürün Bulunmamaktadır
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>