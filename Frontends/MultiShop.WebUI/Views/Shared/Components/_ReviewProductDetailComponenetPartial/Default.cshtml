@model List<ResultCommentDto>
<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">@(Model is not null ?  Model.Count : 0 ) Yorum Bulunmaktadır</h4>
            @if (Model is not null)
            {

                foreach (var item in Model)
                {
                    <div class="media mb-4">
                        <img src="@item.ImageUrl" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                        <div class="media-body">
                            <h6>@item.NameSurname<small> - <i>@item.CreatedDate.ToShortDateString()</i></small></h6>
                            <div class="text-primary mb-2">
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                            </div>
                            <p>@item.CommentDetail</p>
                        </div>
                    </div>
                }
            }
            else
            {


                <div class="media mb-4">
                    Henüz Yorum Yapılmamış
                </div>

            }
        </div>
        @await Html.PartialAsync("AddComment", new CreateCommentDto { ProductId = TempData["productId"].ToString() })
    </div>
</div>