@{ BasketDiscountCalculateDto basketDiscountCalculateDto = ViewBag.BasketDiscountCalculate as BasketDiscountCalculateDto;}
<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Sipariş Ürün Listesi</h6>
        @foreach (var item in basketDiscountCalculateDto.BasketItems)
        {
            <div class="d-flex justify-content-between">
                <p>@item.ProductName (@item.Quantity)</p>
                <p>@(item.Price*item.Quantity) ₺</p>
            </div>

        }
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Alışveriş Tutarı</h6>
            <h6>@basketDiscountCalculateDto.DiscountedAmaunt ₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">@basketDiscountCalculateDto.cargoPrice ₺</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Genel Toplam</h5>
            <h5>@basketDiscountCalculateDto.TotalDiscountAmauntAndCargoPrice ₺</h5>
        </div>
    </div>
</div>