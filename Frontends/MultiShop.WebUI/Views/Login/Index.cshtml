@model SignInDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>MultiShop Giriş Paneli</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">
    <!-- Jquery -->
    <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
    <div class="page-content">
        <div class="form-v4-content">
            <div class="form-left">
                <h2>MultiShop E-Ticaret</h2>
                <p class="text-1">MultiShop projemiz üzerinden e-ticaret işlemlerini gerçekleştirebilmek, indirimli ürünler ve fırsatlardan haberdar olmak adına Hemen Oturum açma işlemi gerçekleştirin.</p>
                <p class="text-2">Alışverişinizi gerçekleştirebilmek için sepetinize ürün eklemek ve ürün listesini görebilmek için oturum açmanı zgerekmektedir. bir Hesabınız yok aşağıdan kayıt olabilirsiniz.</p>
                <div class="form-left-last">
                    <a asp-action="Index" asp-controller="Register" class="account">Kayıt Ol</a>
                </div>
            </div>
            <form asp-action="Index" asp-controller="Login" class="form-detail" method="post">
                <h2>MultiShop Giriş formu</h2>
                <div class="form-group">
                    <div class="form-row">
                        <label asp-for="@Model.UserName">Kullanıcı Adınız</label>
                        <input type="text" asp-for="@Model.UserName" id="password" class="input-text" required>
                    </div>
                    <div class="form-row form-row-1 ">
                        <label asp-for="@Model.Password">Şifreniz</label>
                        <input type="password" asp-for="@Model.Password" id="password" class="input-text" required>
                    </div>
                </div>
                @*<div class="form-checkbox">
                        <label class="container">
                            <p>Beni Hatırla</p>
                            <input type="checkbox" asp-for="@Model" checked >
                            <span class="checkmark"></span>
                        </label>
                    </div>*@
                <div class="form-row-last">
                    <input type="submit" class="register" value="Giriş Yap" />
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
</body>

</html>
